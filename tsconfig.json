        "libs/check-in/shell-web/src/index.ts"
      ],
      "@composite-shell-variation/check-in/feature-ticket-finder": [
        "libs/check-in/feature-ticket-finder/src/index.ts"
      ],
      "@composite-shell-variation/check-in/feature-check-in": [
        "libs/check-in/feature-check-in/src/index.ts"
      ],
      "@composite-shell-variation/booking/feature-passenger-info": [
        "libs/booking/feature-passenger-info/src/index.ts"
